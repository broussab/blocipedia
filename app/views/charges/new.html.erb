<% if current_user.standard? %>
<h4>Upgrade to a Premium Membership to create private wikis</h4>
<%= form_tag charges_path do %>
<script class='stripe-button' src="https://checkout.stripe.com/checkout.js" data-key="<%= @stripe_btn_data[:key] %>" data-amount="<%= @stripe_btn_data[:amount] %>" data-description="<%= @stripe_btn_data[:description] %>"></script>
<% end %>
<% else %>
<h4>Downgrade to a Standard Membership</h4>
<div>
  <%= link_to "Downgrade", downgrade_path, class: 'btn btn-danger', data: { confirm: 'You will no longer be able to create private wikis. Are you sure?' } %>
</div>
<% end %>
