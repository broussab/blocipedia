<div>
  <h1>
    <%= markdown(@wiki.title) %>
    <br>
    <% if @wiki.user == current_user %>
    <%= link_to "Edit", edit_wiki_path, class: 'btn btn-success' %>
    <%= link_to "Delete", @wiki, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wiki?' } %>
    <% end %>
    <br>
    <small>
      submitted
      <%= time_ago_in_words(@wiki.created_at) %>
      ago by
      <%= @wiki.user.username %>
    </small>
  </h1>
</div>
<div class="row">
  <div class="col-md-8">
    <p><%= markdown(@wiki.body) %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <% if @wiki.private? %>
    <strong>Private</strong>
  <% else %>
    <strong>Public</strong>
    <% end %>
  </div>
</div>
